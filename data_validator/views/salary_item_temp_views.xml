<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tbg_salary_item_temp_form" model="ir.ui.view">
        <field name="name">tbg.salary_item_temp.form</field>
        <field name="model">tbg.salary_item_temp</field>
        <field name="arch" type="xml">
            <form string="Salary Item">
              <sheet>
                  <group>
                      <group>
                          <field name="need_confirm"/>
                          <field name="fix_note"/>
                      </group>
                      <group>
                          <field name="employee_badge_id"/>
                          <field name="employee_national_id"/>
                      </group>
                  </group>
                  <group>
                      <group>
                          <field name="date"/>
                          <field name="basic"/>
                          <field name="salary_structure_id"/>
                      </group>
                      <group>
                         <field name="currency_id"/>
                         <field name="pay_currency_id"/>
                     </group>
                  </group>
                  <notebook>
                      <page string="Calculations">
                          <group>
                              <group string="Salary Calculation">
                                <field name="gross"/>
                                <field name="full_basic"/>
                                <field name="rate"/>
                                <field name="all_insured"/>
                                <field name="all_not_insured"/>
                                <field name="full_basic_si"/>
                                <field name="full_salary_si"/>
                            </group>
                            <group string="Social Insurance Calculation">
                                <field name="fixed"/>
                                <field name="si_amount"/>
                                <field name="si_salary"/>
                                <field name="bank_name"/>
                                <field name="fees_on"/>
                                <field name="bank_fees"/>
                                <field name="deduction_fees"/>
                                <field name="refund_salary"/>
                            </group>
                          </group>
                      </page>
                      <page string="Salary Items">
                            <group>
                                <group string=" ">
                                <field name="transportation"/>
                                <field name="mobile"/>
                                <field name="location"/>
                                <field name="meal"/>
                                <field name="plant"/>
                            </group>
                            <group string=" ">
                                <field name="parking"/>
                                <field name="fixed_ot"/>
                                <field name="commission"/>
                                <field name="social_raise"/>
                            </group>
                            <group string=" ">
                                <field name="guaranteed_bonus"/>
                                <field name="housing"/>
                                <field name="acting"/>
                            </group>
                            <group string=" ">
                                <field name="occasional_bonus"/>
                                <field name="job_nature"/>
                                <field name="offshore"/>
                            </group>
                            </group>
                     </page>
                      <page string="Audit">
                          <group>
                              <field name="create_uid"/>
                              <field name="create_date"/>
                          </group>
                      </page>
                  </notebook>
              </sheet>
            </form>
        </field>
    </record>

    <record id="view_tbg_salary_item_temp_tree" model="ir.ui.view">
        <field name="name">tbg.salary_item_temp.tree</field>
        <field name="model">tbg.salary_item_temp</field>
        <field name="arch" type="xml">

            <tree string="Salary Item" decoration-danger="need_confirm" editable="bottom">
                <header>
                    <button type="object" name="action_validate" string="Validate" />
                    <button type="object" name="action_confirm" string="Confirm" />
                </header>
                <field name="employee_badge_id" optional="show"/>
                <field name="employee_national_id" optional="hide"/>
                <field name="date" optional="show"/>
                <field name="create_uid" optional="hide"/>
                <field name="need_confirm" />
                <field name="fix_note" optional="show"/>
                <field name="gross" optional="hide"/>
                <field name="full_basic" optional="hide"/>
                <field name="rate" optional="hide"/>
                <field name="all_insured" optional="hide"/>
                <field name="all_not_insured" optional="hide"/>
                <field name="full_basic_si" optional="hide"/>
                <field name="full_salary_si" optional="hide"/>
                <field name="currency_id" optional="hide"/>
                <field name="pay_currency_id" optional="hide"/>
                <field name="transportation" optional="hide"/>
                <field name="mobile" optional="hide"/>
                <field name="location" optional="hide"/>
                <field name="meal" optional="hide"/>
                <field name="plant" optional="hide"/>
                <field name="parking" optional="hide"/>
                <field name="fixed_ot"  optional="hide"/>
                <field name="commission"  optional="hide"/>
                <field name="social_raise"  optional="hide"/>
                <field name="guaranteed_bonus"  optional="hide"/>
                <field name="housing"  optional="hide"/>
                <field name="acting"  optional="hide"/>
                <field name="job_nature"  optional="hide"/>
                <field name="occasional_bonus"  optional="hide"/>
                <field name="offshore" optional="hide"/>
                <field name="fixed" optional="hide"/>
                <field name="si_amount" optional="hide"/>
                <field name="si_salary" optional="hide"/>
                <field name="bank_name" optional="hide"/>
                <field name="fees_on" optional="hide"/>
                <field name="bank_fees" optional="hide"/>
                <field name="deduction_fees" optional="hide"/>
                <field name="refund_salary" optional="hide"/>
                <button type="object" name="action_open_form_view" icon="fa-pencil" />
            </tree>
        </field>
    </record>

    <record id="action_tbg_salary_item_temp" model="ir.actions.act_window">
        <field name="name">Salary Items</field>
        <field name="res_model">tbg.salary_item_temp</field>
        <field name="view_mode">tree,form</field>

    </record>
</odoo>
