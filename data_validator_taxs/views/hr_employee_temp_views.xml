    <record id="view_employee_temp_tree" model="ir.ui.view">
        <field name="name">hr.employee_temp.tree</field>
        <field name="model">tbg.hr_employee_temp</field>
        <field name="arch" type="xml">
             <tree string="Employees"
                   decoration-danger="need_confirm">
                    <header>
                        <button name="action_validate" string="Validate" type="object" />
                        <button name="action_confirm" string="Confirm" type="object" />
                    </header>
                    <field name="need_confirm"/>
                    <field name="fix_note"/>
                    <field name="name" />
                    <field name="arabic_name" />
                    <field name="arabic_title"/>
                    <field name="barcode" />
                    <field name="private_email" />
                    <field name="private_phone" />
                    <field name="marital" optional="hide"/>
                    <field name="birthday"/>
                    <field name="gender" optional="hide"/>
                    <field name="identification_id"/>
                    <field name="passport_id"/>
                    <field name="company_id" groups="base.group_multi_company" readonly="1" optional="show"/>
                    <field name="department_id" optional="hide"/>
                    <field name="job_id" optional="hide"/>
                    <field name="company_id"  optional="hide"/>
                    <field name="active"  optional="hide"/>
                    <field name="country_id" optional="hide"/>
                </tree>
        </field>
    </record>

    <record id="action_hr_employee_temp_inherit" model="ir.actions.act_window">
        <field name="name">Employees Temp</field>
        <field name="res_model">tbg.hr_employee_temp</field>
        <field name="view_mode">tree,form</field>
        <field name="views"
               eval="[(ref('view_employee_temp_tree'), 'tree'), (ref('view_employee_temp_form'), 'form')]"/>

    </record>

</odoo>