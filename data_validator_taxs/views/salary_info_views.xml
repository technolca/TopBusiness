<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tbg_salary_info_taxs_form" model="ir.ui.view">
        <field name="name">tbg.salary.info.taxs.form</field>
        <field name="model">tbg.salary_info_taxs</field>
        <field name="arch" type="xml">
            <form string="Employee Details For Taxs">
                <sheet>
                    <group>
                        <group string="Validation Notes">
                            <field name="fix_note"/>
                            <field name="need_confirm"/>
                        </group>
                    </group>
                    <group>
                        <!-- Export Fields -->
                        <group string="Export Fields" colspan="4">
                            <group>
                                <group>
                                    <field name="employee_code"/>
                                    <field name="employee_name"/>
                                    <field name="nationality"/>
                                    <field name="national_id"/>
                                    <field name="passport_number"/>
                                    <field name="phone_number"/>
                                </group>
                                <group>
                                    <field name="work_permit_status"/>
                                    <field name="work_permit_number"/>
                                    <field name="job_position"/>
                                    <field name="branch_name"/>
                                    <field name="tax_treatment"/>
                                    <field name="tax_registration_number"/>
                                </group>
                                <group>
                                    <field name="work_duration"/>
                                    <field name="insurance_status"/>
                                    <field name="insurance_number"/>
                                    <field name="insurance_join_date"/>
                                    <field name="previous_period_installment"/>
                                    <field name="end_of_service_date"/>
                                </group>
                                <group>
                                    <field name="social_insurance_end_date"/>
                                    <field name="total_salary"/>
                                    <field name="non_insurance_allowances"/>
                                    <field name="comprehensive_health_insurance_status"/>
                                    <field name="non_worker_wives_count"/>
                                    <field name="dependents_number"/>
                                </group>
                                <group>
                                    <field name="basic_salary"/>
                                    <field name="bonuses_and_incentives"/>
                                    <field name="exempt_special_allowances"/>
                                    <field name="taxable_special_allowances"/>
                                    <field name="commissions"/>
                                    <field name="employee_share_in_profits"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="service_fee"/>
                                    <field name="tips"/>
                                    <field name="board_member_salaries"/>
                                    <field name="cash_compensation_for_leave_balance"/>
                                    <field name="end_of_service_bonus"/>
                                    <field name="amounts_paid_under_special_laws_exempt_part"/>
                                </group>
                                <group>
                                    <field name="other_taxable_allowances"/>
                                    <field name="company_borne_salary_tax"/>
                                    <field name="company_borne_employee_social_insurance_share"/>
                                    <field name="quarterly_paid_taxable_amounts"/>
                                    <field name="semi_annual_paid_taxable_amounts"/>
                                    <field name="annual_paid_taxable_amounts"/>
                                </group>
                                <group>
                                    <field name="car_benefits"/>
                                    <field name="mobile_phone_benefits"/>
                                    <field name="loan_and_advance_benefits"/>
                                    <field name="life_insurance_benefits_employer_share"/>
                                    <field name="company_shares_inside_outside_egypt"/>
                                    <field name="other_benefits"/>
                                </group>
                                <group>
                                    <field name="employee_insurance_fund_contributions"/>
                                    <field name="life_insurance_premiums_employee"/>
                                    <field name="health_insurance_premiums"/>
                                </group>
                                <group>
                                    <field name="pension_insurance_premiums"/>
                                    <field name="additions_loan_value"/>
                                    <field name="additions_non_taxable_end_of_service_bonus"/>
                                </group>
                            </group>
                        </group>
                    </group>
                    <group>
                        <group string="Other Fields">
                        <group>
                            <field name="additions_non_taxable_leave_balance"/>
                            <field name="other_additions"/>
                            <field name="deductions_alimony"/>
                            <field name="deductions_loan_installment"/>
                            <field name="deductions_union_club_subscriptions"/>
                            <field name="deductions_penalties"/>
                        </group>
                        <group>
                            <field name="deductions_life_insurance_premium"/>
                            <field name="other_deductions"/>
                            <field name="actually_transferred_amounts"/>
                            <field name="annual_gross_income"/>
                            <field name="tax_due_for_original_employment"/>
                            <field name="tax_due_for_employment_model_3"/>
                        </group>
                        <group>
                            <field name="tax_due_for_employment_model_2"/>
                            <field name="total_tax_due_for_all_employment"/>
                            <field name="tax_due_for_period"/>
                            <field name="tax_due_for_previous_periods_1_4_5_6_7"/>
                            <field name="tax_due_for_period_1_4_5_6_7"/>
                            <field name="tax_due_for_previous_periods_2"/>
                        </group>
                        <group>
                            <field name="tax_due_for_period_2"/>
                            <field name="tax_due_for_previous_periods_3"/>
                            <field name="tax_due_for_period_3"/>
                            <field name="final_net_salary"/>
                            <field name="social_contribution_for_martyrs_fund"/>
                            <field name="support_for_people_with_disabilities"/>
                        </group>
                        <group string="Additional Details">
                            <field name="total_entitlements"/>
                            <field name="insurance_wage"/>
                            <field name="insurance_subscription_value"/>

                            <field name="personal_exemption"/>
                            <field name="period_bowl"/>
                            <field name="annual_tax"/>
                        </group>
                    </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <record id="view_tbg_salary_info_taxs_tree" model="ir.ui.view">
        <field name="name">tbg.salary.info.taxs.tree</field>
        <field name="model">tbg.salary_info_taxs</field>
        <field name="arch" type="xml">
            <tree string="Employee Details For Taxs" decoration-danger="need_confirm">
                <header>
                    <button name="action_validate" string="Validate" type="object" />
                    <button type="object" name="action_validate" string="Validate And Fix" context="{'validate_and_fix': True}" />
<!--                    <button name="action_confirm" string="Confirm" type="object" />-->
                </header>
                <field name="need_confirm"/>
                <field name="fix_note" optional="show"/>
                <field name="employee_code" optional="show"/>
                <field name="employee_name" optional="show"/>
                <field name="nationality" optional="show"/>
                <field name="national_id" optional="show"/>
                <field name="passport_number" optional="show"/>
                <field name="phone_number" optional="show"/>
                <field name="work_permit_status" optional="show"/>
                <field name="job_position" optional="show"/>
                <field name="branch_name" optional="show"/>
                <field name="tax_treatment" optional="show"/>
                <field name="total_salary" optional="show"/>
                <field name="basic_salary" optional="show"/>
                <field name="bonuses_and_incentives" optional="hide"/>
                <field name="commissions" optional="hide"/>
                <field name="service_fee" optional="hide"/>
                <field name="tips" optional="hide"/>
                <field name="end_of_service_bonus" optional="hide"/>
                <field name="annual_gross_income" optional="hide"/>
                <field name="final_net_salary" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="action_tbg_salary_info_taxs" model="ir.actions.act_window">
        <field name="name">Employee Details For Taxs</field>
        <field name="res_model">tbg.salary_info_taxs</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_tbg_salary_info_taxs_tree"/>
    </record>

</odoo>
