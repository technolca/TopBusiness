<odoo>
    <data>
        <!-- Form view -->
        <record id="view_branch_contract_details_form" model="ir.ui.view">
            <field name="name">res.company.contract.details.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Contract Details">
                        <group>
                            <group string="Contract Details">
                                <field name="contract_start_date"/>
                                <field name="contract_end_date"/>
                                <field name="commission_type"/>
                                <field name="commission_value"/>
<!--                                <field name="life_insurance_contract_ids" widget="one2many_list"/>-->
<!--                                <field name="medical_insurance_contract"/>-->
                            </group>
                            <group string="Invoicing Method">
                                <field name="invoicing_method"/>
                            </group>
                            <group>
                                <field name="customer_hold"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

